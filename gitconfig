[difftool "kdiff"]
	cmd = /Applications/kdiff3.app/Contents/MacOS/kdiff3 \"$LOCAL\" \"$REMOTE\"
	path =
[merge]
	tool = "Sublime Merge"
[mergetool "kdiff"]
	cmd = /Applications/kdiff3.app/Contents/MacOS/kdiff3 \"$BASE\" \"$LOCAL\" \"$REMOTE\" -o \"$MERGED\"
	trustExitCode = true
[mergetool "Sublime Merge"]
	cmd = smerge mergetool \"$BASE\" \"$REMOTE\" \"$LOCAL\" -o \"$MERGED\"
[push]
	default = simple
[alias]
	ls = log --pretty=format:\"%C(yellow)%h%Cred%d\\\\ %Creset%s%Cblue\\\\ [%cn]\" --decorate
	ll = log --pretty=format:\"%C(yellow)%h%Cred%d\\\\ %Creset%s%Cblue\\\\ [%cn]\" --decorate --numstat
	lds = log --pretty=format:\"%C(yellow)%h\\\\ %ad%Cred%d\\\\ %Creset%s%Cblue\\\\ [%cn]\" --decorate --date=short
	ld = log --pretty=format:\"%C(yellow)%h\\\\ %ad%Cred%d\\\\ %Creset%s%Cblue\\\\ [%cn]\" --decorate --date=relative
	le = log --oneline --decorate
	filelog = log -u
	fl = log -u
	la = "!git config -l | grep alias | cut -c 7-"
	status = status -s
	st = status -s
	incoming = "!git remote update -p; git log ..@{u}"
	outgoing = log @{u}..
	in = incoming
	out = outgoing
	co = checkout
	unstage = reset HEAD --
	f = "!git ls-files | grep -i"
	push-up = "!gitbranchname() { git symbolic-ref --short HEAD; }; gitpushupstream() { git push --set-upstream origin `gitbranchname`; }; gitpushupstream"
	push-tags = "!gitbranchname() { git symbolic-ref --short HEAD; }; gitpushtags() { git push origin `gitbranchname` --tags; }; gitpushtags"
	pushf = push --force-with-lease
	push-force = push --force-with-lease
	prune-branches = !git fetch --prune && git branch -vv | grep ': gone]' | awk '{print $1}'
	prune-branches-ok = !git fetch --prune && git branch -vv | grep ': gone]' | awk '{print $1}' | xargs git branch -D
[credential]
	helper = osxkeychain
